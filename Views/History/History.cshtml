@model AkıllıTrafikSistemi.Models.RouteHistoryViewModel

@{
    ViewData["Title"] = "Rota Geçmişim";
    Layout = "_ALayout"; 
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet-routing-machine@3.2.12/dist/leaflet-routing-machine.js"></script>

<style>
    /* Dashboard Yerleşimi (Yan Yana) */
    .dashboard-wrapper {
        display: flex;
        gap: 20px;
        margin: 20px;
        height: calc(100vh - 180px); 
        min-height: 600px;
    }

    /* Klasik Tablo Paneli */
    .table-panel {
        flex: 1.2; /* Tablo içeriği geniş olduğu için biraz daha alan verdik */
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    /* Harita Paneli */
    .map-panel {
        flex: 0.8;
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        overflow: hidden;
    }

    #historyMap {
        width: 100%;
        height: 100%;
    }

    /* Tablo İç Stilleri */
    .table-scroll {
        overflow-y: auto;
        flex: 1;
    }

    .table {
        margin-bottom: 0;
        font-size: 0.9rem; /* Sütun sayısı arttığı için fontu hafif küçülttük */
    }

    .table thead th {
        background: #f8f9fa;
        position: sticky;
        top: 0;
        z-index: 10;
        border-bottom: 2px solid #dee2e6;
        white-space: nowrap;
    }

    .route-row {
        cursor: pointer;
        transition: background 0.1s;
    }

    .route-row:hover {
        background-color: #f1f3f5 !important;
    }

    .route-row.active-route {
        background-color: #e7f1ff !important;
        border-left: 4px solid #007bff;
    }

    /* Mobil Görünüm */
    @@media (max-width: 1100px) {
        .dashboard-wrapper {
            flex-direction: column;
            height: auto;
            margin: 10px;
        }
        .table-panel, .map-panel {
            flex: none;
            width: 100%;
            height: 450px;
        }
        .mobile-hidden { display: none !important; }
    }

    .leaflet-routing-container { display: none !important; }
</style>

<div class="container-fluid">
    <h2 class="mt-3 mb-3 ms-2">@Model.Username Rota Geçmişi</h2>

    @if (Model.HistoryEntries.Count == 0)
    {
        <div class="alert alert-info m-2">Henüz kaydedilmiş bir rotanız bulunmamaktadır.</div>
    }
    else
    {
        <div class="dashboard-wrapper">
            <div class="table-panel shadow-sm">
                <div class="table-scroll">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Şehir</th>
                                <th>Durum</th>
                                <th>Sıcaklık</th>
                                <th class="mobile-hidden">Rüzgar</th>
                                <th>Tahmin</th>
                                <th>OSRM Süre</th> <th class="text-center">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.HistoryEntries)
                            {
                                <tr class="route-row" onclick="selectRoute(this)"
                                    data-start-lat="@entry.StartLat.ToString("R", System.Globalization.CultureInfo.InvariantCulture)"
                                    data-start-lng="@entry.StartLng.ToString("R", System.Globalization.CultureInfo.InvariantCulture)"
                                    data-end-lat="@entry.EndLat.ToString("R", System.Globalization.CultureInfo.InvariantCulture)"
                                    data-end-lng="@entry.EndLng.ToString("R", System.Globalization.CultureInfo.InvariantCulture)">
                                    
                                    <td class="text-nowrap">@entry.SavedAt.ToString("dd MMM HH:mm")</td>
                                    <td>@entry.City</td>
                                    <td>@entry.Description</td>
                                    <td>@entry.Temperature.ToString("0.#")°C</td>
                                    <td class="mobile-hidden">@entry.Windspeed.ToString("0") km/h</td>
                                    <td class="fw-bold text-success">@entry.TotalPredictedDuration.ToString("0") dk</td>
                                    <td class="text-muted">@entry.TotalOSRMDuration.ToString("0") dk</td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-primary">🗺️</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="map-panel shadow-sm">
                <div id="historyMap"></div>
            </div>
        </div>
    }
</div>

<script>
    var map = null;
    var routingControl = null;

    function initMap() {
        if (!map) {
            map = L.map('historyMap').setView([41.015137, 28.979530], 11);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { 
                maxZoom: 19 
            }).addTo(map);
        }
    }

    function selectRoute(element) {
        document.querySelectorAll('.route-row').forEach(r => r.classList.remove('active-route'));
        element.classList.add('active-route');

        const lat1 = parseFloat(element.dataset.startLat);
        const lng1 = parseFloat(element.dataset.startLng);
        const lat2 = parseFloat(element.dataset.endLat);
        const lng2 = parseFloat(element.dataset.endLng);

        drawRoute(lat1, lng1, lat2, lng2);
        
        if (window.innerWidth < 1100) {
            document.getElementById('historyMap').scrollIntoView({ behavior: 'smooth' });
        }
    }

    function drawRoute(sLat, sLng, eLat, eLng) {
        if (routingControl) {
            map.removeControl(routingControl);
        }

        routingControl = L.Routing.control({
            waypoints: [L.latLng(sLat, sLng), L.latLng(eLat, eLng)],
            router: L.Routing.osrmv1({ serviceUrl: 'https://router.project-osrm.org/route/v1' }),
            lineOptions: { styles: [{ color: '#007bff', opacity: 0.8, weight: 6 }] },
            createMarker: function(i, wp) {
                return L.marker(wp.latLng, {
                    icon: L.divIcon({
                        className: 'm-marker',
                        html: `<div style="background:${i===0?'#28a745':'#dc3545'};width:12px;height:12px;border-radius:50%;border:2px solid #fff;box-shadow:0 0 5px rgba(0,0,0,0.2);"></div>`
                    })
                });
            },
            addWaypoints: false,
            fitSelectedRoutes: true,
            show: false
        }).addTo(map);
    }

    document.addEventListener('DOMContentLoaded', () => {
        initMap();
        const firstRow = document.querySelector('.route-row');
        if(firstRow) firstRow.click();

        window.addEventListener('resize', () => {
            if (map) map.invalidateSize();
        });
    });
</script>